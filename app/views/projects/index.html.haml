%h2= 'Projects list'

.row
  = link_to 'Add new project', new_project_path, class: 'btn btn-primary'
%br/
%br/
.row
  %table.table.table-striped.table-hover
    %tr
      %th #
      %th Name
      %th Default language
      %th Enable Languages
      %th Actions


    - @projects.each do |project|
      %tr
        %td= project.id
        %td= link_to project.name, project_path(project)
        %td= project.default_language.name
        %td
          %ol
            - project.languages.each do |l|
              %li= link_to l.name, project_words_path(project, language_id: l.id)
        %td
          = link_to 'Edit', edit_project_path(project), class: 'btn btn-info btn-sm'
          &nbsp;
          = link_to 'Destroy', project_path(project), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'
